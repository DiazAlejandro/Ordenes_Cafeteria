<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="Ordenes_CafeteriaPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>modelo.Programacionentregas</class>
    <class>modelo.Menu</class>
    <class>modelo.Orden</class>
    <class>modelo.Platillo</class>
    <class>modelo.TipoIngrediente</class>
    <class>modelo.Cliente</class>
    <class>modelo.Bebida</class>
    <class>modelo.Ingrediente</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/ordenes_cafeteria"/>
      <property name="javax.persistence.jdbc.user" value="postgres"/>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.password" value="1253"/>
    </properties>
  </persistence-unit>
</persistence>
